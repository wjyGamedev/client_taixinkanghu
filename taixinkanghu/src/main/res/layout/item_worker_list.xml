<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/worker_btn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bule_frame_all"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_order_rb"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10.0dip">

        <com.taixinkanghu.widget.circleimageview.CircleImageView
            android:id="@+id/pic"
            android:layout_width="65.0dip"
            android:layout_height="65.0dip"
            android:layout_marginLeft="5.0dip"
            android:layout_marginRight="10.0dip"
            android:src="@mipmap/face_img"
            app:border_color="@color/main_color"
            app:border_width="0.5dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5.0dip"
                    android:text="王瑾瑜"
                    android:textColor="@color/text_color_black"
                    android:textSize="16.0sp" />

                <RatingBar
                    android:id="@id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="15.0dip"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressDrawable="@drawable/rating_bar"
                    android:rating="5" />

                <TextView
                    android:id="@id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-5.0dip"
                    android:layout_marginRight="3.0dip"
                    android:layout_marginTop="-5.0dip"
                    android:layout_weight="1.0"
                    android:gravity="right"
                    android:text="250"
                    android:textColor="@color/text_color_orange"
                    android:textSize="18.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.0"
                    android:text="元/天"
                    android:textColor="@color/text_color_black"
                    android:textSize="14.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31岁"
                    android:textColor="@color/text_color_gray"
                    android:textSize="13.0sp" />

                <TextView
                    android:layout_width="0.5dip"
                    android:layout_height="12.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:background="@color/divider_color" />

                <TextView
                    android:id="@id/province"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吉林"
                    android:textColor="@color/text_color_gray"
                    android:textSize="13.0sp" />

                <TextView
                    android:layout_width="0.5dip"
                    android:layout_height="12.0dip"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:background="@color/divider_color" />

                <TextView
                    android:id="@id/workYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2年护理经验"
                    android:textColor="@color/text_color_gray"
                    android:textSize="13.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/level_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.0dip"
                    android:layout_weight="0.0"
                    android:singleLine="true"
                    android:text="中级护理员"
                    android:textColor="@color/text_color_black"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@id/inService"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="服务中"
                    android:textSize="13.0sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>