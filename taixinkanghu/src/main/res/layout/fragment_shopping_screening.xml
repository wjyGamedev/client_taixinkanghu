<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/shopping_screening_region"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/transparent_region"
		android:layout_width="match_parent"
		android:layout_height="121dp"
		android:background="#00000000"
		android:orientation="vertical"></LinearLayout>

	<ListView
		android:id="@+id/screening_btn_list"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ffffffff"
		android:choiceMode="singleChoice"
		android:divider="@color/divider_color"
		android:dividerHeight="0.100000024dp"
		android:listSelector="@drawable/bg_btn_translucent"
		android:scrollbars="none"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="@color/divider_color"
		android:id="@+id/dividing_line"/>

	<View
		android:id="@+id/mask_region"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/mask"/>
</LinearLayout>