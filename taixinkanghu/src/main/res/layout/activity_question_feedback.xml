<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_header" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44.0dip"
                android:layout_marginLeft="30dip"
                android:gravity="center_vertical"
                android:text="欢迎您反馈试用产品的感受和建议"
                android:textColor="@color/main_color" />


            <LinearLayout
                android:id="@+id/btn_open_fragment"
                android:layout_width="match_parent"
                android:layout_height="54.0dip"
                android:background="@drawable/bg_bule_frame_all"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="66.0dip"
                    android:layout_marginLeft="15dip"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="联系方式：" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="66.0dip"
                    android:layout_marginRight="15dip"
                    android:gravity="center_vertical"
                    android:text="请您填写 V " />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44.0dip"
                android:layout_marginLeft="30dip"
                android:gravity="center_vertical"
                android:text="感受和建议"
                android:textColor="@color/main_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_bule_frame_all">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="66.0dip"
                    android:layout_marginLeft="15dip"
                    android:gravity="center_vertical"
                    android:text="问题反馈页面不够出色" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48.0dip"
            android:background="@color/main_color_mask"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36.0dip"
                android:orientation="horizontal"
                android:paddingTop="10dip"
                android:weightSum="1">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_weight="0.87"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="意见反馈"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="16.0sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dip"
                    android:background="@mipmap/img_plus"
                    android:gravity="center_vertical"
                    android:visibility="gone" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:background="@color/white"></View>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>